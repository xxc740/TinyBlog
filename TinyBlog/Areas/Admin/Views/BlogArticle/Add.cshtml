@{
    ViewBag.Title = "添加博客";
}

@Styles.Render("~/css/blogarticle")
@Styles.Render("~/css/wangEditor")

<div class="blogbody">
    <div class="tnav row border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2 class="fl">博客后台</h2>
            <ol class="breadcrumb fl">
                <li><a href="/Admin/Home">博客管理</a></li>
                <li><strong>发布博客</strong></li>
            </ol>
        </div>
    </div>

    <div>
        <div class="wrapper wrapper-content animated fadeInUp" style="height:600px;padding-bottom:30px;overflow:auto">
            @using (Ajax.BeginForm("Add","BlogArticle",new AjaxOptions(){
                HttpMethod = "POST",
                OnSuccess = "afterAddBlog"
            },new { @class="form-horizontal"}))
            {
                <div class="form-group">
                    <label class="col-md-1 control-label">标题：</label>
                    <div class="col-md-11">
                        <input  type="text" name="btitle" id="btitle" value="" class="form-control" placeholder=""/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-1 control-label">类别：</label>
                    <div class="col-md-2">
                        <select name="bcategory" id="original" class="form-control">
                            <option value="技术博客" selected="selected">技术博文</option>
                            <option value="随笔日记">随笔日记</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-1 control-label">内容：</label>
                    <div class="col-md-11">
                        <textarea id="blogcontent" rows="18" name="blogcontent" class="form-control" placeholder="请输入内容...."></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-10">
                        <input  type="submit" id="submit" class="btn btn-info" value="保存" data-loading-text="请稍候..."/>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@Scripts.Render("~/js/jquery")
@Scripts.Render("~/js/wangEditor")
@Scripts.Render("~/js/unobtrusive")
@Scripts.Render("~/js/InitEditor")