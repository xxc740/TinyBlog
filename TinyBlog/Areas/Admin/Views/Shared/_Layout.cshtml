<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 博客后台管理系统</title>
    @Styles.Render("~/css/tether")
    @Styles.Render("~/css/bootstrap")
    @Styles.Render("~/css/font-awesome")
    @Styles.Render("~/css/zui")
    @Styles.Render("~/css/metisMenu")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <header>
        <div class="navbar navbar-inverse" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse-example">
                    <span class="sr-only">切换导航</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">系统后台</a>
            </div>
            <div class="collapse navbar-collapse navbar-collapse-example">
                <ul class="nav navbar-nav navbar-right">
                    <li><a><i class="icon icon-user"></i>你好, Admin</a></li>
                    <li><a><i class="icon icon-exchange"></i>隐藏菜单</a></li>
                    <li><a href=""><i class="icon icon-home"></i>首页</a></li>
                    <li><a><i class="icon icon-question-sign"></i>帮助</a></li>
                    <li><a><i class="icon icon-off"></i>退出</a></li>
                </ul>
            </div>
        </div>
    </header>
    <div class="clearfix">
        @Html.Partial("_sidebar")
        <div class="col-sm-12 col-sm-offset-3 col-md-10 col-md-offset-2 rightmain">
            <div class="col-sm-12 col-md-12 rightcontent">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="col-md-12 footer footerstyle">
        <p>&copy: @DateTime.Now.Year - 我的博客系统</p>
    </footer>

    @Scripts.Render("~/js/jquery")
    @Scripts.Render("~/js/tether")
    @Scripts.Render("~/js/bootstrap")
    @Scripts.Render("~/js/zui")
    @Scripts.Render("~/js/metisMenu")
    @RenderSection("scripts", required: false)
</body>
</html>